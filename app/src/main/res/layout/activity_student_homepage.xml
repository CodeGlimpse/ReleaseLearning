<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".studentHomepage.StudentHomepage">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轻学"
        android:textColor="@color/blue"
        android:textSize="20dp"/>

    <FrameLayout
        android:layout_marginTop="50dp"
        android:id="@+id/login_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <!--<Button
            android:layout_margin="0dp"
            android:id="@+id/btn_homeWork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue_little"
            android:text="作业"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:drawableTop="@drawable/chat"/>-->

        <LinearLayout
            android:id="@+id/btn_homeWork"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/shape_linearlayout2">

            <ImageView
                android:id="@+id/iv_homework"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/homework"/>

            <TextView
                android:id="@+id/tv_homework"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="作业"
                android:textColor="@color/white"/>

        </LinearLayout>

       <!-- <Button
            android:layout_margin="0dp"
            android:id="@+id/btn_exam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="考试"
            android:textSize="20dp"
            android:drawableTop="@drawable/exam_click" />-->

        <LinearLayout
            android:id="@+id/btn_exam"
            android:background="@drawable/shape_linearlayout"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_exam"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/exam_click"/>

            <TextView
                android:id="@+id/tv_exam"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="考试"
                android:textColor="@color/blue"/>

        </LinearLayout>

        <!--<Button
            android:layout_margin="0dp"
            android:id="@+id/btn_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="讨论"
            android:textSize="20dp" />-->

        <LinearLayout
            android:id="@+id/btn_chat"
            android:background="@drawable/shape_linearlayout"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_chat"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/chat_click"/>

            <TextView
                android:id="@+id/tv_chat"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="讨论"
                android:textColor="@color/blue"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>